
<%= simple_form_for(@recipe) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :preparation %>
    <%= f.input :portions %>
    <%= f.input :ingredients %>
    <%= f.input :method %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
